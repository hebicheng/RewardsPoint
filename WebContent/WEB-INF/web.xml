<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Reward</display-name>
  <welcome-file-list>
    <welcome-file>Rank</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>InitServlet</servlet-name>
    <servlet-class>reward.servlet.InitServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>UpdateRecordServlet</servlet-name>
    <servlet-class>reward.servlet.UpdateRecordServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateRecordServlet</servlet-name>
    <url-pattern>/UpdateRecord</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminContestServlet</servlet-name>
    <servlet-class>reward.servlet.AdminContestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminContestServlet</servlet-name>
    <url-pattern>/ac</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreateContestServlet</servlet-name>
    <servlet-class>reward.servlet.CreateContestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateContestServlet</servlet-name>
    <url-pattern>/CreateContest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ListContestServlet</servlet-name>
    <servlet-class>reward.servlet.ListContestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListContestServlet</servlet-name>
    <url-pattern>/Contests</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ListTeamerServlet</servlet-name>
    <servlet-class>reward.servlet.ListTeamerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListTeamerServlet</servlet-name>
    <url-pattern>/Rank</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DoLoginServlet</servlet-name>
    <servlet-class>reward.servlet.DoLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DoLoginServlet</servlet-name>
    <url-pattern>/dologin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>reward.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>reward.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddPointServlet</servlet-name>
    <servlet-class>reward.servlet.AddPointServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddPointServlet</servlet-name>
    <url-pattern>/addpoint</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ReducePointServlet</servlet-name>
    <servlet-class>reward.servlet.ReducePointServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReducePointServlet</servlet-name>
    <url-pattern>/reducepoint</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>sql_dialect</param-name>
    <param-value>mysql</param-value>
  </context-param>
  <context-param>
    <param-name>data_source</param-name>
    <param-value>reward</param-value>
  </context-param>
  <filter>
    <filter-name>Filter</filter-name>
    <filter-class>reward.filter.Filter</filter-class>
    <init-param>
      <param-name>LOGIN_PATH</param-name>
      <param-value>/Reward/login</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Filter</filter-name>
    <url-pattern>/auth/*</url-pattern>
  </filter-mapping>
  <resource-ref>
    <res-ref-name>jdbc/reward</res-ref-name>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>